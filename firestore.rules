rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is the owner of a club
    function isClubOwner(clubId) {
      return request.auth != null && get(/databases/$(database)/documents/clubs/$(clubId)).data.ownerId == request.auth.uid;
    }

    // Helper to check for admin OR owner access via memberships
    // This is safer for role-based management
    function hasAdminAccess(clubId) {
      let membershipPath = /databases/$(database)/documents/memberships/$(request.auth.uid + '_' + clubId);
      return request.auth != null && (
        exists(membershipPath) && 
        (get(membershipPath).data.role == 'admin' || get(membershipPath).data.role == 'owner')
      );
    }

    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Clubs
    match /clubs/{clubId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (hasAdminAccess(clubId) || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberCount']));
      allow delete: if request.auth != null && isClubOwner(clubId);

      // Message Board
      match /messages/{messageId} {
        allow read: if true;
        // Only members can post
        allow create: if request.auth != null && exists(/databases/$(database)/documents/memberships/$(request.auth.uid + '_' + clubId));
      }
    }

    // Memberships
    match /memberships/{membershipId} {
      allow read: if true;
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid || 
        hasAdminAccess(request.resource.data.clubId)
      );
      allow update: if request.auth != null && hasAdminAccess(resource.data.clubId);
      allow delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        hasAdminAccess(resource.data.clubId)
      );
    }

    // Join Requests
    match /join_requests/{requestId} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        hasAdminAccess(resource.data.clubId)
      );
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        hasAdminAccess(resource.data.clubId)
      );
    }

    // Weekly Sessions
    match /weekly_sessions/{sessionId} {
      allow read: if true;
      allow create: if request.auth != null && hasAdminAccess(request.resource.data.clubId);
      allow update: if request.auth != null && hasAdminAccess(resource.data.clubId);
      allow delete: if request.auth != null && hasAdminAccess(resource.data.clubId);
    }

    // Scores
    match /scores/{scoreId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    // Season Standings
    match /season_standings/{standingId} {
      allow read: if true;
      allow write: if request.auth != null && hasAdminAccess(request.resource.data.clubId);
    }
  }
}
