rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /club_logos/{clubId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // For now simplified, logic could check membership if needed
    }
  }
}
